{% extends 'base.html.twig' %}
{% block main %}


    <div id="users">
        <h3>
            Usuarios
        </h3>

        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">Nombre de usuario</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>
                            <a href="{{ path('user_edit', {'id': user.id}) }}">
                                {{ user.fullName }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('user_edit', {'id': user.id}) }}">
                                {{ user.username }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('user_edit', {'id': user.id}) }}">
                                {{ user.email }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% if users.haveToPaginate %}
        <div class="navigation text-center">
            {{ pagerfanta(users, 'twitter_bootstrap3_translated', {routeName: 'user_index_paginated', routeParams: app.request.query.all}) }}
        </div>
    {% endif %}
    
{% endblock %}

{% block sidebar %}

    <div class="section actions">
        <a href="{{ path('user_add') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_user'|trans }}
        </a>
    </div>

    {{ parent() }}
{% endblock %}
